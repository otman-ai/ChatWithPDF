upstream backend {
    server 127.0.0.1:8000;
}

# Redirect all HTTP domain requests to HTTPS
server {
    listen 80;
    listen [::]:80;

    server_name api.tswira.com www.api.tswira.com;

    return 301 https://$host$request_uri;
}

# Proxy HTTPS domain requests to FastAPI
server {
    listen 443 ssl;
    listen [::]:443 ssl;

    server_name api.tswira.com www.api.tswira.com;

    ssl_certificate /etc/letsencrypt/live/www.api.tswira.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/www.api.tswira.com/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    location / {
        proxy_pass http://backend;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}

# Catch-all for IP (and any other unmatched domain) on HTTP â€” proxy to FastAPI
server {
    listen 80;
    listen [::]:80;

    server_name _;

    location / {
        proxy_pass http://backend;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
